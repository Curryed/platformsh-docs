{
  "name": "platformsh-docs",
  "version": "1.0.0",
  "description": "This repository holds the public user documentation for [Platform.sh](https://platform.sh/).",
  "license": "CC-BY-NC-SA-4.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformsh/platformsh-docs.git"
  },
  "main": "gulpfile.js",
  "author": "Platform.sh",
  "scripts": {
    "scss-build": "gulp scss",
    "scss-watch": "gulp watch",
    "assets-dist": "gulp dist",
    "hugo-watch-dev": "hugo server --watch --verbose --buildDrafts --cleanDestinationDir --disableFastRender",
    "hugo-watch-prod": "./hugo",
    "cleanup-fetch-files": "rm -rf static/files/fetch/*",
    "get-docs-appyaml": "mkdir -p static/files/fetch/docsappyaml && cp .platform.app.yaml static/files/fetch/docsappyaml/platformsh-docs",
    "get-templates": "git clone https://github.com/platformsh/template-builder.git static/files/fetch/templates && rm static/files/fetch/templates/templates/nextcloud/files/occ",
    "get-examples": "node static/scripts/fetch-examples.js",
    "fetch-files": "npm run cleanup-fetch-files && npm run get-docs-appyaml && npm run get-templates && npm run get-examples",
    "registry-files": "node static/scripts/updateExampleConfigFiles.js",
    "build-searchapp": "cd static/scripts/xss && npm install && npm run-script build",
    "dev": "npm run fetch-files && npm run registry-files",
    "build": "npm run fetch-files && npm run registry-files && npm run build-searchapp",
    "prod": "npm run fetch-files && npm run registry-files && npm run scss-build"
  },
  "devDependencies": {
    "pshregistry-parser": "^1.2.0"
  },
  "dependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "async": "^3.2.1",
    "babelify": "^10.0.0",
    "bl": "^2.2.1",
    "browserify": "^16.5.2",
    "cssnano": "^5.0.8",
    "glob-parent": "^5.1.2",
    "gulp": "^4.0.2",
    "gulp-concat": "^2.6.1",
    "gulp-imagemin": "^7.1.0",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "imagemin-jpeg-recompress": "^6.0.0",
    "imagemin-pngquant": "^8.0.0",
    "is-svg": "^4.3.1",
    "normalize-url": "^4.5.1",
    "postcss": "^8.3.6",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "trim-newlines": "^3.0.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  }
}
